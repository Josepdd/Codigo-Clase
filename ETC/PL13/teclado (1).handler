##
## Código inicial del manejador


##############################################################
##              ÁREA DE DATOS DEL MANEJADOR                 ##
##############################################################

        .kdata
var1:   .word 0xFFFFFFFF
contexto: .space 20

#############################################################
##                  CÓDIGO DEL MANEJADOR                   ##
#############################################################

        .ktext 0x80000080
		
        ## Preserva el contexto del programa de usuario
        .set noat
		sw $at, 0($k1)
		.set at
		sw $t0, 4($k1)
		sw $a0, 8($k1)
		sw $v0, 12($k1)
		sw $t1, 16($k1)

        ## Identifica y trata excepciones
        ## (nada de momento)
        li $v0,11
        li $a0, '*'
        syscall
    
        li $t0, 0xFFFF0000
		#li $t1, 2
		#sb $t1, 0($t0)
        lw $a0, 4($t0)
		
		##Restaura el contexto
		.set noat
		lw $at, 0($k1)
		.set at
		lw $t0, 4($k1)
		lw $a0, 8($k1)
		lw $v0, 12($k1)
		lw $t1, 16($k1)
		
        mfc0 $k0,$14
        rfe
        jr $k0 

#############################################################
##                    CÓDIGO DE INICIO                     ##
#############################################################

        .text
        .globl __start 
__start: 
        ## Código de inicio
        ## HAY QUE PONER CÓDIGO AQUÍ
		
		la $k1, contexto
    
        la $t0, 0xFFFF0000
        li $t1, 2
        sb $t1, 0($t0)
    
        li $t1, 0x0103
        mtc0 $t1,$12

        ## Salto al programa de usuario
        jal main

        ## Código de terminación
        li $v0, 10
        syscall  # Función exit

